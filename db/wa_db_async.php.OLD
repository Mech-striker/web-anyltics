require_once WA_INCLUDE_DIR . '/Log/Log.php';

/**
 * Async Logger
 * 
 * @author      Peter Adams <peter@openwebanalytics.com>
 * @copyright   Copyright &copy; 2006 Peter Adams <peter@openwebanalytics.com>
 * @license     http://www.gnu.org/copyleft/gpl.html GPL v2.0
 * @category    wa
 * @package     wa
 * @version		$Revision$	      
 * @since		wa 1.0.0
 */
class wa_db_async {

	/**
	 * Logger
	 *
	 * @var object
	 */
	var $logger;
	
	/**
	 * Configuration
	 *
	 * @var array
	 */
	var $config;
	
	/**
	 * Constructor
	 *
	 * @return wa_db_async
	 */
	function wa_db_async() {
		
		$this->config = &wa_settings::get_settings();
 
		$conf = array('mode' => 0755, 'timeFormat' => '%X %x');
		$this->logger = &Log::singleton('file', $this->config['async_log_dir'] . 'events'.date("Ymd"), 'ident', $conf);
		$this->logger->_lineFormat = '%1$s|%2$s|[%3$s]|%4$s';
		
		return;
	}

	function query($sql) {
	
		$result = $this->logger->log($sql);
		
		return $result;
	
	}
	
}

?>
